<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Drone.Fragment_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_home"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:alpha="1"
            />

        <LinearLayout
            android:id="@+id/cadreMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cadre"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_home_desc1"
                android:textColor="#fff"
                android:paddingTop="30px"
                android:paddingLeft="20px"
                android:paddingRight="20px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_home_desc2"
                android:textColor="#fff"
                android:paddingBottom="30px"
                android:paddingLeft="20px"
                android:paddingRight="20px"/>/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>